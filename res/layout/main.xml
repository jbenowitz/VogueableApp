<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent"
  android:padding="10dip"
  android:orientation="vertical">
  
  
  
  
  
   <RelativeLayout
  	android:orientation="horizontal"
  	android:layout_height="wrap_content"
     android:layout_width="fill_parent">
  	
  	<Gallery xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:id="@+id/gallery"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerInParent="true"
	/>
  </RelativeLayout>
  
  <RelativeLayout
     android:orientation="horizontal"
     android:layout_height="50dip"
     android:layout_width="fill_parent" 
     android:layout_alignParentBottom="true" 
     android:background="#000000"
     style="@android:style/ButtonBar">
     
      <ImageButton
      	android:id="@+id/like_button"
      	android:padding="10dp"
        android:background="@drawable/like_button"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
       />
      <ImageButton
      	android:id="@+id/dislike_button"
      	android:padding="10dp"
      	android:background="@drawable/dislike_button"
      	android:layout_height="wrap_content"
      	android:layout_width="wrap_content"
      	android:layout_toLeftOf="@id/like_button"
      />
      <ImageButton
      	android:id="@+id/info_button"
      	android:padding="10dp"
      	android:background="@drawable/info"
      	android:layout_height="wrap_content"
      	android:layout_width="wrap_content"
      	android:layout_alignParentLeft="true"
      	/>
      
	<Button 
		android:id="@+id/wishlist_button" 
		android:text="@string/wish_label"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/info_button"
		android:textSize="15dip"
        android:textColor="#b7b7b7"></Button>
   <Button 
   		android:id="@+id/buy_button"
   		android:text="@string/buy_label"
   		android:layout_height="wrap_content"
   		android:layout_width="wrap_content"
   		android:layout_toRightOf="@id/wishlist_button"
   		android:textSize="15dip"
   		android:textColor="#b7b7b7"/>
      </RelativeLayout>
        
  
   
</RelativeLayout>